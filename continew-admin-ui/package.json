    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.10",
    "echarts": "^5.4.3",
    "highlight.js": "^11.9.0",
    "jsencrypt": "^3.3.2",
    "lodash": "^4.17.21",
    "mitt": "^3.0.1",
    "nprogress": "^0.2.0",
    "pinia": "^2.1.7",
    "query-string": "^8.1.0",
    "sortablejs": "^1.15.0",
    "vue": "^3.3.7",
    "vue-cropper": "^1.1.1",
